@model Eventos.Models.Evento

@{
    ViewData["Title"] = "Details";
}

<!-- Favicons -->
<link href="~/assetsUsuario/img/favicon.png" rel="icon" />
<link href="~/assetsUsuario/img/apple-touch-icon.png" rel="apple-touch-icon" />

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500&family=Inter:wght@400;500&family=Playfair+Display:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

<!-- Vendor CSS Files -->
<link href="~/assetsusuario/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/assetsUsuario/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
<link href="~/assetsUsuario/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />
<link href="~/assetsUsuario/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />
<link href="~/assetsusuario/vendor/aos/aos.css" rel="stylesheet" />

<!-- Template Main CSS Files -->
<link href="~/assetsUsuario/css/variables.css" rel="stylesheet" />
<link href="~/assetsUsuario/css/main.css" rel="stylesheet" />

<link href="~/css/estiloadmin.css" rel="stylesheet" />
<script src="~/javascript/detalleevento.js"></script>
<div id="admin">
    <h1>Details</h1>

    <div>
        <h4>Evento</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre_evento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre_evento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion_evento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion_evento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.fecha_Evento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fecha_Evento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.hora_evento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.hora_evento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.espacios_evento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.espacios_evento)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<div id="usuario">
    <div style="margin-top:7%; margin-left:5%">
        <div class="col-lg-8">
            <div class="row g-5" style=" text-align:center;align-items:center;">
                <div class="col-lg-8 border-start custom-border" style=" text-align:center;align-items:center;">
                    <div class="post-entry-1" style="text-align:center;align-items:center; border-color:white; border-style:solid; border-width: 3px; padding:2%; background-color:white">
                        <div id="imageEvento" style="max-width: 100%;"></div>
                        <div class="post-meta"><span class="date">@Html.DisplayFor(model => model.fecha_Evento) </span> <span class="mx-1">&bullet;</span> <span>@Html.DisplayFor(model => model.hora_evento)</span></div>
                        <h2><a href="single-post.html">@Html.DisplayFor(model => model.Nombre_evento)</a></h2>
                        <p>@Html.DisplayFor(model=> model.Descripcion_evento)</p>
                        <p>Espacios disponibles:  @Html.DisplayFor(model => model.espacios_evento)</p>|
                    </div>
                </div>
            </div>
        </div>

        <div id="pagos">

            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Nombre_evento" class="form-control" />
                <input type="hidden" asp-for="Descripcion_evento" class="form-control" />
                <input type="hidden" asp-for="fecha_Evento" class="form-control" />
                <input type="hidden" asp-for="hora_evento" class="form-control" />

                <div class="form-group" style="max-width:25%; margin-left: 50%; margin-top: -30%;">
                    <label asp-for="espacios_evento" class="control-label">Digite el numero de entradas que desea</label>
                    <input type="number" value="0" pattern="^[1-5]\d*$" asp-for="espacios_evento" class="form-control" />
                    <span asp-validation-for="espacios_evento" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-left: 50%; margin-top: 3%;">
                    <input type="submit" value="Comprar entradas" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>