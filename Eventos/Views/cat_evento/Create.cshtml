@model Eventos.Models.cat_evento
Eventos.Controllers.EventoController controlEventos

@{
    ViewData["Title"] = "Create";
}
<script src="~/javascript/categorias.js"></script>

<link href="~/css/estiloadmin.css" rel="stylesheet" />

<div id="CatEven">

<hr />
<div class="row" style="margin-top:10%; margin-left:3%">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre_Cat" class="control-label">Nombre</label>
                <input asp-for="Nombre_Cat" class="form-control" />
                <span asp-validation-for="Nombre_Cat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_cat_Entrada" class="control-label">Precio</label>
                <input type="number" asp-for="Precio_cat_Entrada" class="form-control" />
                <span asp-validation-for="Precio_cat_Entrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contraseña_cat" class="control-label">Evento</label>
                <input asp-for="contraseña_cat" class="form-control" />
                <span asp-validation-for="contraseña_cat" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:3%">
    <a asp-action="Index">Ver lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>